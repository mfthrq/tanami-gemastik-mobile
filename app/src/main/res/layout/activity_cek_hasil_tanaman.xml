<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CekHasilTanaman">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_gradient_background"
        android:padding="29dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/tombol_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tombol_back_putih"
                        android:layout_gravity="start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_bold"
                        android:text="Hasil Cek Tanaman"
                        android:layout_marginLeft="20dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textSize="20sp" />
                </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_layout"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Tanaman Kamu Butuh Perawatan!!!"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="Tanaman lili Kamu menunjukkan beberapa tanda yang memerlukan perhatian khusus. Daun-daunnya mulai mengalami perubahan warna, dengan sebagian mulai menguning, yang bisa menjadi indikasi kurangnya nutrisi atau terlalu banyak penyiraman. Selain itu, muncul bercak-bercak cokelat pada tepi daun, yang mungkin menandakan adanya masalah seperti serangan hama, infeksi jamur, atau stres akibat kondisi lingkungan yang kurang ideal. Penanganan segera diperlukan untuk mencegah kondisi tanaman memburuk dan memastikan lili Kamu kembali sehat."
                    android:textColor="#FFFFFF"
                    android:justificationMode="inter_word"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_bold"
                    android:layout_marginTop="18dp"
                    android:text="Apa yang harus kamu lakukan?"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_bintang_ai"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Penyiraman: Kurangi atau tingkatkan frekuensi penyiraman, sesuai kebutuhan. Tanah sebaiknya lembab tapi tidak tergenang."
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_bintang_ai"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Pencahayaan: Pastikan tanaman mendapatkan cahaya yang cukup, tapi hindari paparan langsung sinar matahari yang terlalu kuat."
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_bintang_ai"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Pemangkasan: Potong bagian daun yang rusak untuk mendorong pertumbuhan baru."
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_bintang_ai"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Pemupukan: Pertimbangkan untuk menambahkan pupuk cair untuk mendukung pertumbuhan tanaman."
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_bold"
                    android:layout_marginTop="20dp"
                    android:text="Video yang terkait"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/video_konsultasi_1"
                            android:layout_width="240dp"
                            android:layout_height="200dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/video_konsultasi_1"/>
                        <ImageView
                            android:id="@+id/video_konsultasi_2"
                            android:layout_width="240dp"
                            android:layout_height="200dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/video_konsultasi_2"/>
                        <ImageView
                            android:id="@+id/video_konsultasi_3"
                            android:layout_width="240dp"
                            android:layout_height="200dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/video_konsultasi_3"/>
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- Tambahkan overlay layout di sini -->
    <RelativeLayout
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_background_overlay"
        android:paddingHorizontal="20dp"
        android:paddingTop="130dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/overlay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_bold"
            android:text="Ingin Lihat Hasil Scan Tanamanmu?"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="start" />

        <!-- Isi Teks -->
        <TextView
            android:id="@+id/overlay_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overlay_title"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Hai! Kami sudah memindai tanamanmu menggunakan teknologi AI canggih, dan hasilnya sudah siap. Untuk bisa melihat kondisi tanamanmu secara real-time, kamu perlu menukarkan 3 TANAMI Coin.\n\nDengan menukarkan koin ini, kamu bisa mendapatkan insight mendalam tentang kesehatan tanamanmu, apakah mereka sedang sehat, butuh perawatan khusus, atau ada tanda-tanda masalah yang perlu diatasi segera. Semuanya ada di hasil scan ini!\n\nJangan khawatir, ini investasi kecil untuk memastikan tanamanmu selalu dalam kondisi terbaik. Yuk, tukar koin sekarang dan lihat apa yang tanamanmu katakan!"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:justificationMode="inter_word"
            android:gravity="start" />

        <LinearLayout
            android:id="@+id/button_tukar_3_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overlay_message"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="@drawable/button_radius_white_1"
            >

            <ImageView
                android:id="@+id/logo_coin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_coin_button"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_below="@id/button_tukar_3_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Tukar 3 TANAMI Coin"
                    android:textColor="#4CAF50"
                    android:textSize="13sp"
                    android:gravity="center" />
                <TextView
                    android:layout_below="@id/button_tukar_3_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="Dan lihat hasil scan tanamanmu!"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_batalkan"
            android:layout_below="@id/button_tukar_3_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text="Batalkan lihat hasil"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>