<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".PembayaranBerhasil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_buletbulet"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran Berhasil"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/dmsans_bold"
                    />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/checklist_pembayaran_berhasil"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_lanjutkan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lihat Jadwal"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/gradient_green_todo"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/dmsans_bold"
                    android:textSize="16sp"
                    />

            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>