<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DetailProduk">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!-- Menu Navbar Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_homepage">

                <!-- Container Navbar Start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/tombol_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tombol_back_hitam"
                        android:layout_gravity="start"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_bold"
                        android:text="Bibit Tomat"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tombol_share_hitam"
                        android:layout_gravity="end"/>
                </LinearLayout>
                <!-- Container Navbar End -->
            </LinearLayout>
            <!-- Menu Navbar End -->

        </LinearLayout>
        <!-- Header End -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_layout"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/benih_tomat"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/benih_tomat_detail_produk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="29dp"
                    android:paddingRight="29dp"
                    android:paddingBottom="100dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_bold"
                            android:text="Bibit Tomat"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="25sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_bold"
                            android:text="Rp. 10.000"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Tanaman Sayur"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                    <ImageView
                        android:id="@+id/rating_5_stars"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rating_5_stars" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Benih Tomat Kualitas Terbaik cocok untuk kebun mungil dirumah mu. Benih Tomat Kualitas Terbaik cocok untuk kebun mungil dirumah mu. Benih Tomat Kualitas Terbaik cocok untuk kebun mungil dirumah mu. Benih Tomat Kualitas Terbaik cocok untuk kebun mungil dirumah mu."
                        android:textColor="#000000"
                        android:justificationMode="inter_word"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C0C0C0"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="Item Details"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:justificationMode="inter_word"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:rotation="180"
                            android:src="@drawable/tombol_back_hitam"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C0C0C0"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:id="@+id/ll_lihat_ulasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="Lihat Ulasan"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:justificationMode="inter_word"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:rotation="180"
                            android:src="@drawable/tombol_back_hitam"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C0C0C0"
                        android:layout_marginTop="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="Dukungan"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:justificationMode="inter_word"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:rotation="180"
                            android:src="@drawable/tombol_back_hitam"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C0C0C0"
                        android:layout_marginTop="10dp"
                        />
                   
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/dmsans_bold"
                            android:text="Rekomendasi Untukmu"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:justificationMode="inter_word"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="12 Produk"
                            android:textColor="@color/grey"
                            android:justificationMode="inter_word"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/produk_benih_tomat"
                                android:layout_width="150dp"
                                android:layout_height="240dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/card_tanaman_apel"/>
                            <ImageView
                                android:id="@+id/produk_tanaman_bayam"
                                android:layout_width="150dp"
                                android:layout_height="240dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/card_tanaman_puring"/>
                            <ImageView
                                android:id="@+id/produk_pupuk_kasgot"
                                android:layout_width="150dp"
                                android:layout_height="240dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/card_pupuk_kasgot"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <!-- Navbar Start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <!-- Menu Navbar Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rectangle_homepage">

                <!-- Container Navbar Start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="29dp"
                    android:layout_marginLeft="29dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_tambah_keranjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tambah ke Keranjang"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/gradient_green_todo"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/dmsans_bold"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- Container Navbar End -->
            </LinearLayout>
            <!-- Menu Navbar End -->
        </LinearLayout>
        <!-- Navbar End -->
    </RelativeLayout>


</RelativeLayout>