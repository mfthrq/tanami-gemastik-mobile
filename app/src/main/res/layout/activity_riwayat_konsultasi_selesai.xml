                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:padding="15dp"
                                    android:background="@drawable/background_note_biruabu_round"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:layout_marginRight="5dp"
                                            android:src="@drawable/icon_note"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/dmsans_bold"
                                            android:text="Note"
                                            android:textColor="@color/green"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:text="• Lokasi: Pilih area dengan sinar matahari cukup, drainase baik, dan ketinggian 700-1.200 mdpl."
                                        android:textColor="#000000"
                                        android:layout_marginTop="5dp"
                                        android:textSize="12sp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:text="• Tanah: Gunakan tanah gembur dengan pH 6,0-7,0. Tambahkan pupuk organik 20-30 ton/ha."
                                        android:textColor="#000000"
                                        android:layout_marginTop="5dp"
                                        android:textSize="12sp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:text="• Bedengan: Buat bedengan lebar 1-1,2 m, tinggi 20-30 cm, jarak tanam 20-30 cm."
                                        android:textColor="#000000"
                                        android:layout_marginTop="5dp"
                                        android:textSize="12sp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:text="• Irigasi: Pasang sistem irigasi tetes atau sprinkler. Pastikan kelembaban tanah konsisten."
                                        android:textColor="#000000"
                                        android:layout_marginTop="5dp"
                                        android:textSize="12sp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:text="• Bibit: Pilih bibit berkualitas, simpan di tempat sejuk dan kering sebelum ditanam."
                                        android:textColor="#000000"
                                        android:layout_marginTop="5dp"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="16dp"
                                    android:paddingBottom="16dp"
                                    >

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/btn_chat_ahli"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginBottom="1dp"
                                        android:layout_marginLeft="1dp"
                                        android:textSize="11sp"
                                        android:textAllCaps="false"
                                        android:fontFamily="@font/dmsans_bold"
                                        android:textColor="#7ED956"
                                        android:text="Chat Ahli"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_radius_white_1"
                                        />

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginRight="1dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginBottom="1dp"
                                        android:layout_marginLeft="1dp"
                                        android:textSize="11sp"
                                        android:textAllCaps="false"
                                        android:textColor="#FFFFFF"
                                        android:fontFamily="@font/dmsans_bold"
                                        android:text="Pesan Lagi"
                                        android:background="@drawable/background_green_round"
                                        />

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="1dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/rectangle_homepage"
                                android:padding="16dp"
                                >

                                <LinearLayout
