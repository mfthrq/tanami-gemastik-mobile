<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".JadwalKonsultasi">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/header_homepage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/header_homepage1"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/dmsans_bold"
            android:gravity="center"
            android:text="Atur Jadwal"
            android:textColor="#40A858"
            android:textSize="20sp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@drawable/rounded_green_gradient"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:background="@drawable/rounded_white"
                android:layout_marginTop="30dp"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="20dp"
                        android:paddingBottom="100dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/dmsans_bold"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:text="Agustus"
                            android:textColor="#40A858"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <include layout="@layout/tablayout_jadwal_hari" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"
                            android:fontFamily="@font/dmsans_regular"
                            android:gravity="center"
                            android:text="*Waktu booking tidak dapat melebihi 7 hari"
                            android:textColor="#FF0000"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:id="@+id/container_jadwal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="08.00 - 08.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/button_radius_red_1"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="09.00 - 09.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/button_radius_red_1"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="10.00 - 10.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="11.00 - 11.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="12.00 - 12.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="13.00 - 13.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="14.00 - 14.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="15.00 - 15.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_green_round"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="16.00 - 16.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="17.00 - 17.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="18.00 - 18.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/background_transparent_round"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_10_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:text="19.00 - 19.35"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@drawable/button_radius_red_1"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/dmsans_regular"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/filter_warna_jadwal"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_bold"
                            android:layout_marginTop="20dp"
                            android:text="Pilih Konselor"
                            android:textColor="#000000"
                            android:textSize="17sp" />
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:id="@+id/radioGroup">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/foto_orang_spesialis"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Nurrizkyta Aulia Hanifah"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_bold"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Spesialis Tanaman Hias"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:textColor="#000000"/>
                                </LinearLayout>

                                <RadioButton
                                    android:id="@+id/radio_fase1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/green" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/foto_orang_spesialis"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Nurrizkyta Aulia Hanifah"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_bold"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Spesialis Tanaman Hias"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:textColor="#000000"/>
                                </LinearLayout>

                                <RadioButton
                                    android:id="@+id/radio_fase2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/green" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/foto_orang_spesialis"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Nurrizkyta Aulia Hanifah"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_bold"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Spesialis Tanaman Hias"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:textColor="#000000"/>
                                </LinearLayout>

                                <RadioButton
                                    android:id="@+id/radio_fase3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/green" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/foto_orang_spesialis"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Nurrizkyta Aulia Hanifah"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_bold"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Spesialis Tanaman Hias"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/dmsans_regular"
                                        android:textColor="#000000"/>
                                </LinearLayout>

                                <RadioButton
                                    android:id="@+id/radio_fase4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/green" />
                            </LinearLayout>
                        </RadioGroup>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>
        </LinearLayout>
        <!-- Navbar Start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="0"
            android:orientation="vertical"
            >
            <!-- Menu Navbar Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rectangle_homepage">
                <!-- Container Navbar Start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="29dp"
                    android:layout_marginLeft="29dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_mulai_konsultasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lanjutkan"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/gradient_green_todo"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/dmsans_bold"
                        android:textSize="16sp"
                        />

                </LinearLayout>
                <!-- Container Navbar End -->
            </LinearLayout>
            <!-- Menu Navbar End -->
        </LinearLayout>
        <!-- Navbar End -->
    </RelativeLayout>

</RelativeLayout>